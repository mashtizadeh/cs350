\setbeamertemplate{frametitle}[default][center]
\addtobeamertemplate{frametitle}{}{\offinterlineskip\pgfuseshading{shadeline}}
\defbeamertemplate*{frametitle}{cshadow}{
  \ifbeamercolorempty[bg]{frametitle}{}{\nointerlineskip}%
  \@tempdima=\textwidth%
  \advance\@tempdima by\beamer@leftmargin%
  \advance\@tempdima by\beamer@rightmargin%
  \begin{beamercolorbox}[sep=0.3cm,center,wd=\the\@tempdima]{frametitle}
    \usebeamerfont{frametitle}%
    \vbox{}\vskip-1ex%
    \hypersetup{allcolors=title-link,
      linkbordercolor=title-link,
      urlbordercolor=title-link}%
    \strut\insertframetitle\strut\par%
    {%
      \ifx\insertframesubtitle\@empty%
      \else%
      {\usebeamerfont{framesubtitle}\usebeamercolor[fg]{framesubtitle}\insertframesubtitle\strut\par}%
      \fi
    }%
    \vskip-1ex%
    \if@tempswa\else\vskip-.3cm\fi% set inside beamercolorbox... evil here...
  \end{beamercolorbox}%
  \nointerlineskip\vspace*{-.1mm}\centerline{\pgfuseshading{shadeline}}
}
